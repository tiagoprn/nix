{
  "pyprland": {
    "plugins": ["scratchpads"]
  },
  "scratchpads": {
    "term": {
      "command": "~/scripts/kitty/terminal-scratchpad.sh",
      "animation": "fromTop",
      "margin": 50,
      "unfocus": "hide"
    },
    "volume": {
      "command": "pavucontrol",
      "animation": "fromTop"
    }
  }
}
